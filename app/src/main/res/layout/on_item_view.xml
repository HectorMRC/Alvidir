<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout android:id="@+id/onItem_flag"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        android:alpha="0.9"
        android:background="@color/green"
        android:animateLayoutChanges="true"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"

            android:textColorHint="@color/green"
            android:hint="Nom/Ver"
            android:textSize="12sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textSize="11sp"
            android:hint="@string/catala"
            tools:ignore="SmallSp" />

        <TextView android:id="@+id/onItem_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"

            android:text="@string/catala"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textSize="11sp"
            android:hint="@string/app_name"
            tools:ignore="SmallSp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView android:id="@+id/onItem_tran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:textSize="20sp"
                android:text="@string/app_name"
                android:fontFamily="@font/font"/>

            <TextView android:id="@+id/onItem_fon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:gravity="end"
                android:text="@string/app_name"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>